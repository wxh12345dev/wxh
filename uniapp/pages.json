{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "欢迎使用！"
			}
		},
		{
			"path": "pages/beiwang/index",
			"style": {
				"navigationBarTitleText": "我的备忘录",
				"navigationStyle":"default",
				 "enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/riji/index",
			"style": {
				"navigationBarTitleText": "我的日记",
				"navigationStyle":"default"
			}
		},
		{
			"path": "pages/user/index"
		},
		{
			"path": "pages/user/about"
		},
		{
			"path": "pages/beiwang/detail"
		},
		{
			"path": "pages/riji/detail"
		},
		{
			"path": "pages/riji/show"
		},
		{
			"path": "pages/user/login",
			"style": {
				"navigationBarTitleText": "登陆",
				"navigationStyle":"default"
			}
		},
		{
			"path": "pages/user/register",
			"style": {
				"navigationBarTitleText": "注册",
				"navigationStyle":"default"
			}
		}
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationStyle":"custom",
		"navigationBarBackgroundColor": "#68b56b",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
	    "color": "#7A7E83",
	    "selectedColor": "#0C9EDE",
	    "borderStyle": "black",
	    "backgroundColor": "#ffffff",
	    "list": [{
	        "pagePath": "pages/index/index",
	        "iconPath": "static/images/shouye.png",
	        "selectedIconPath": "static/images/shouyeHL.png",
	        "text": "首页"
	    }, {
	        "pagePath": "pages/beiwang/index",
	        "iconPath": "static/images/beiwang.png",
	        "selectedIconPath": "static/images/beiwangHL.png",
	        "text": "备忘录"
	    }, {
	        "pagePath": "pages/riji/index",
	        "iconPath": "static/images/riji.png",
	        "selectedIconPath": "static/images/rijiHL.png",
	        "text": "日记"
	    }, {
	        "pagePath": "pages/user/index",
	        "iconPath": "static/images/user.png",
	        "selectedIconPath": "static/images/userHL.png",
	        "text": "我的"
	    }]
	}
}
